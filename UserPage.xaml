<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeTrack.UserPage">

    <VerticalStackLayout Padding="30" Spacing="25">
        <!-- Vous pouvez personnaliser cette page en tant que tableau de bord principal de l'utilisateur -->
        <Label Text="PAGE USER"
               FontSize="Title"
               SemanticProperties.HeadingLevel="Level1"
               HorizontalOptions="Center" />

        <!-- Ici, vous pourriez avoir des widgets ou des informations pertinentes pour l'utilisateur -->

        <Button Text="Déconnexion"
                Clicked="OnLogoutClicked" />
    </VerticalStackLayout>

</ContentPage>
